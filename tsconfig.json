{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".", // Permet les imports relatifs Ã  la racine du projet
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true, // Si tu as encore du JS dans tes fichiers
    "allowImportingTsExtensions": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": ["**/*", "prisma/seeders/**/*", "src/**/*"],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "ESNext",
      "target": "ESNext",
      "moduleResolution": "NodeNext"
    },
    "loader": "ts-node/esm"
  }
}
